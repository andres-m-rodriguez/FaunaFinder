@page "/about"
@inject IAppLocalizer L

<PageTitle>@L["PageTitle_About"]</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="py-8">
    <MudText Typo="Typo.h4" Color="Color.Primary" GutterBottom="true">@L["About_Title"]</MudText>

    <MudPaper Elevation="0" Class="pa-4 mb-4">
        <MudText Typo="Typo.h6" Color="Color.Primary" GutterBottom="true">@L["About_WhatIsTitle"]</MudText>
        <MudText Typo="Typo.body1">
            @L["About_WhatIsDescription"]
        </MudText>
    </MudPaper>

    <MudPaper Elevation="0" Class="pa-4">
        <MudText Typo="Typo.h6" Color="Color.Primary" GutterBottom="true">@L["About_DataSourcesTitle"]</MudText>
        <MudList T="string" Dense="true">
            <MudListItem Icon="@Icons.Material.Filled.Agriculture">
                <MudText Typo="Typo.body1">
                    <strong>@L["About_NrcsPractices"]</strong> @L["About_NrcsPracticesDesc"]
                </MudText>
            </MudListItem>
            <MudListItem Icon="@Icons.Material.Filled.Pets">
                <MudText Typo="Typo.body1">
                    <strong>@L["About_FwsActions"]</strong> @L["About_FwsActionsDesc"]
                </MudText>
            </MudListItem>
            <MudListItem Icon="@Icons.Material.Filled.Map">
                <MudText Typo="Typo.body1">
                    <strong>@L["About_SpeciesData"]</strong> @L["About_SpeciesDataDesc"]
                </MudText>
            </MudListItem>
        </MudList>
    </MudPaper>
</MudContainer>
